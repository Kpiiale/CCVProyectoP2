<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CCVProyectoP2.Views.IndexView"
             Title="IndexView">
    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="20">
            <Border BackgroundColor="White" >
                <VerticalStackLayout>
                    <Image Source="administrador.jpg" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center"/>
                    <Label Text="Administrador"
                           FontAttributes="Bold" FontSize="18"
                           HorizontalOptions="Center" Margin="0,10,0,5"/>
                    <Label Text="Texto..."
                           FontSize="14" TextColor="Gray"
                           HorizontalOptions="Center" HorizontalTextAlignment="Center"/>
                    <Button Text="Ingresar" Margin="0,10,0,0" HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>